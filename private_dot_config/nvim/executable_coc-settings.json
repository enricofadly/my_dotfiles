{
  // coc nvim general configuration
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "suggest.enablePreview": false,
  "suggest.echodocSupport": true,
  "diagnostic.enable": true,
  "diagnostic.enableSign": true,
  "diagnostic.messageTarget": "echo",
  "diagnostic.checkCurrentLine": true,
  "refactor.saveToFile": true,
  "codeLens.enable": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnTypeFiletypes": ["*"],
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "snippets.priority": 99,
  // highlight configuration
  "highlight.colors.enable": true,
  "highlight.colorNames.enable": true,
  // eslint configuratioe
  "eslint.format.enable": true,
  "eslint.packageManager": "pnpm",
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onType",
  "eslint.autoFixOnSave": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.debug": true,
  // prettier configuration
  "prettier.eslintIntegration": true,
  "prettier.formatterPriority": 0,
  // configuration for yaml
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.validate": true,
  "yaml.completion": true,
  // configuration for coc-explorer
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.position": "left",
  // lua server configuration
  "Lua.completion.callSnippet": "Both",
  "Lua.hint.enable": true,
  "Lua.hint.setType": true,
  "coc.preferences.extensionUpdateCheck": "daily"
}
